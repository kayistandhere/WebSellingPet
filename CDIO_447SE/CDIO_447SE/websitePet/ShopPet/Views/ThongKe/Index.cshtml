@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

@using ShopWatches.Models
@model DonHangViewModel
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<div class="page-header">
    <a href="#tab_1-1" data-toggle="tab" class="btn btn-outline btn-primary">Đã xác nhận</a>
    <a href="#tab_2-2" data-toggle="tab" class="btn btn-outline btn-primary">Chưa xác nhận</a>
</div>
<div class="form-group">
    <label for="start_date">Từ ngày:</label>
    <input type="date" id="start_date" name="start_date">
    <label for="end_date">Đến ngày:</label>
    <input type="date" id="end_date" name="end_date">
    <button type="button" id="filter_btn" class="btn btn-primary">Lọc</button>
</div>

<div id="result">
    <!-- Kết quả lọc dữ liệu sẽ được hiển thị tại đây -->
</div>

<script src="~/Scripts/locdulieu.js"></script>

<div class="dataTable_wrapper tab-content">
    <div class="tab-pane active" id="tab_1-1">
        <table class="table table-striped table-bordered table-hover" id="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Khách hàng</th>
                    <th>Nơi giao</th>
                    <th>Thời gian</th>
                    <th>Tổng</th>
                    <th>Chi tiết</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.DonHangDaDuyet.Count; i++)
                {
    

                if (Model?.DonHangDaDuyet != null)
                {
                    foreach (var item in Model.DonHangDaDuyet)
                    {
                        <tr class="@(item.MaHoaDon % 2 == 0 ? "even" : "odd") gradeA">
                            <td>@item.MaHoaDon</td>
                            <td>@item.TenKhachHang</td>
                            <td>@item.DiaChiGiaoHang</td>
                            <td>@item.NgayTao</td>
                            <td>@double.Parse(@Model.DonHangDaDuyet[i].TongTien.ToString()).ToString("##,###") VNĐ</td>
                            <td>
                                <a href="/Orders/Details/@item.MaHoaDon" class="btn btn-outline btn-primary">Details</a>
                            </td>
                            <td>
                                <a href="/Orders/Delete/@item.MaHoaDon" class="btn btn-outline btn-primary" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này không?')">Xóa</a>
                            </td>
                        </tr>
                    }
                }
                }
            </tbody>
        </table>
    </div>

    <!-- ... (similarly for the second tab) ... -->
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/sb-admin-2.js"></script>
